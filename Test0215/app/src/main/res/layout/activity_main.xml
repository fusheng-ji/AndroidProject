<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wp"
    tools:context="com.example.a1407232261.test0215.MainActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="主界面"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/flashlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手电筒!!!"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/note"
        android:layout_alignStart="@+id/record" />

    <Button
        android:id="@+id/record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="录音!!!"
        android:layout_below="@+id/note"
        android:layout_alignStart="@+id/note" />

    <Button
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计时器!!!"
        android:layout_below="@+id/flashlight"
        android:layout_alignStart="@+id/flashlight" />

    <Button
        android:id="@+id/alertdialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="各种框"
        android:layout_below="@+id/time"
        android:layout_alignStart="@+id/time" />

    <Button
        android:id="@+id/friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好朋友"
        android:layout_below="@+id/alertdialog"
        android:layout_alignStart="@+id/alertdialog" />

    <Button
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备忘录!!!"
        android:layout_below="@+id/myInfo"
        android:layout_alignStart="@+id/myInfo" />

    <Button
        android:id="@+id/myInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyInfo"
        android:layout_below="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <Button
        android:id="@+id/R_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="红与黑"
        android:layout_below="@+id/friend"
        android:layout_alignStart="@+id/friend" />

    <Button
        android:id="@+id/game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/R_B"
        android:layout_below="@+id/R_B"
        android:text="游戏" />

    <Button
        android:id="@+id/compass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/game"
        android:layout_below="@+id/game"
        android:text="指南针" />

    <Button
        android:id="@+id/acfun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/compass"
        android:layout_below="@+id/compass"
        android:text="ACFUN" />


</RelativeLayout>
